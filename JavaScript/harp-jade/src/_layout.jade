doctype
html
  != partial( "_partials/head" )
  body
    != partial( "_partials/github" )
    != partial( "_partials/header" )

    if current.source == 'index'
      // note: if index page -- no title on page (just in head)
      != yield
    else
      // otherwise assume page w/ title
      div(class="page")
        h1 #{page.title}
        != yield

    != partial( "_partials/footer" )
